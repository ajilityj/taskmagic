<%= form_for(@subtask) do |f| %>

  <%= f.hidden_field :task_id %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :platform_id %><br />
    <%= f.collection_select :platform_id, Platform.all, :id, :name, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :due_date %><br>
    <%= f.text_field :due_date, id: 'datepicker' %>
    <%= f.hidden_field :due_date, id: 'datepicker_db_format' %>
  </div>
  <div class="field">
    <%= f.label :priority %><br>
    <%= f.select :priority, Task::PRIORITY_LEVELS %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, Task::STATUS_LEVELS %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
